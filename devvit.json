{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "stonefall99",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },
  "blocks": {
    "entry": "src/devvit/main.tsx"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "redis": true,
    "reddit": {
      "enable": true,
      "scope": "user"
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create Stonefall Game Post",
        "description": "Start a new Stonefall tower game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onPostDelete": "/internal/on-post-delete",
    "onCommentDelete": "/internal/on-comment-delete"
  },
  "dev": {
    "subreddit": "stonefall99_dev2"
  }
}
